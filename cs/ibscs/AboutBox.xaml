<Window x:Class="IbsCs.AboutBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:p="clr-namespace:IbsCs.Properties"
        MinWidth="500" Width="500"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Style="{StaticResource WindowChild}"
        Title="{x:Static p:Resources.AboutBoxWindowTitle}"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" ContentTemplate="{StaticResource DataTemplateOk}" Style="{StaticResource Button75}" IsDefault="True" IsCancel="True" HorizontalAlignment="Right"/>
        <TextBox Grid.Column="1" IsReadOnly="True" Name="textBoxAbout" BorderThickness="0" Margin="5" Background="Transparent"/>
    </DockPanel>
</Window>
